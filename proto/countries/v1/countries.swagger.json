    },
    "v1CountryReply": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "geo": {
          "$ref": "#/definitions/CountryReplyGeo"
        },
        "code": {
          "$ref": "#/definitions/CountryReplyCode"
        },
        "euMember": {
          "type": "boolean"
        },
        "tlds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "languages": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "currencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exchanges": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CountryReplyExchange"
          }
        },
        "subDivision": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CountryReplyDivision"
          }
        },
        "borders": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "v1CountrySearchRequest": {
      "type": "object",
      "properties": {
        "country": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "continent": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "page": {
          "$ref": "#/definitions/countriesv1Page"
        }
      }
    }
  },
