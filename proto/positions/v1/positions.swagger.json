{
  "swagger": "2.0",
  "info": {
    "title": "Positions APIs",
    "description": "Positions APIs accounts",
    "version": "1.0",
    "contact": {
      "name": "Arktos Venture project",
      "url": "https://github.com/arktos-venture/buf",
      "email": "oss@arktos-consulting.cloud"
    }
  },
  "tags": [
    {
      "name": "Positions"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/positions": {
      "post": {
        "summary": "Public API\nSearch Positions opened",
        "operationId": "Positions_Search",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PositionReplies"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1PositionRequest"
            }
          }
        ],
        "tags": [
          "Positions"
        ]
      }
    },
    "/v1/positions/{account}": {
      "get": {
        "summary": "Private API\nDelete Positions open or closed",
        "operationId": "Positions_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PositionDeleteReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "positions",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": [
              "Companies",
              "Currencies"
            ],
            "default": "Companies"
          }
        ],
        "tags": [
          "Positions"
        ]
      }
    }
  },
  "definitions": {
    "PositionReplyCost": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "number",
          "format": "float"
        },
        "total": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "PositionReplyPerformance": {
      "type": "object",
      "properties": {
        "percent": {
          "type": "number",
          "format": "float"
        },
        "money": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "googlerpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "type_url": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "v1PositionDeleteReply": {
      "type": "object",
      "properties": {
        "total": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "v1PositionReplies": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1PositionReply"
          }
        },
        "total": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "v1PositionReply": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "exchange": {
          "type": "string"
        },
        "size": {
          "type": "number",
          "format": "float"
        },
        "cost": {
          "$ref": "#/definitions/PositionReplyCost"
        },
        "performance": {
          "$ref": "#/definitions/PositionReplyPerformance"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1PositionRequest": {
      "type": "object",
      "properties": {
        "positions": {
          "$ref": "#/definitions/v1PositionTypes"
        },
        "account": {
          "type": "string"
        }
      }
    },
    "v1PositionTypes": {
      "type": "string",
      "enum": [
        "Companies",
        "Currencies"
      ],
      "default": "Companies"
    }
  },
  "securityDefinitions": {
    "bearer": {
      "type": "apiKey",
      "description": "Authentication token, prefixed by Bearer: Bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "bearer": []
    }
  ]
}
