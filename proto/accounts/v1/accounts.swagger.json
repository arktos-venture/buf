{
  "swagger": "2.0",
  "info": {
    "title": "Accounts APIs",
    "description": "Accounts APIs trade companies",
    "version": "1.0",
    "contact": {
      "name": "Arktos Venture project",
      "url": "https://github.com/arktos-venture/buf",
      "email": "oss@arktos-consulting.cloud"
    }
  },
  "tags": [
    {
      "name": "Accounts"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/account/{account}": {
      "get": {
        "summary": "Public API\nGet Account properties",
        "operationId": "Accounts_Get",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AccountReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Accounts"
        ]
      },
      "delete": {
        "summary": "Public API\nDelete existing Account",
        "operationId": "Accounts_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AccountDelete"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Accounts"
        ]
      },
      "put": {
        "summary": "Public API\nUpdate properties of Account",
        "operationId": "Accounts_Update",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AccountReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "currency": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "tags": [
          "Accounts"
        ]
      }
    },
    "/v1/accounts": {
      "post": {
        "summary": "Public API\nCreate a new Account",
        "operationId": "Accounts_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1AccountReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1AccountModifyRequest"
            }
          }
        ],
        "tags": [
          "Accounts"
        ]
      }
    }
  },
  "definitions": {
    "AccountReplyPositions": {
      "type": "object",
      "properties": {
        "stocks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1PositionReply"
          }
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1PositionReply"
          }
        },
        "cash": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1PositionReply"
          }
        }
      }
    },
    "OrderReplySize": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "number",
          "format": "float"
        },
        "buy": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "PositionReplyCost": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "number",
          "format": "float"
        },
        "total": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "PositionReplyPerformance": {
      "type": "object",
      "properties": {
        "percent": {
          "type": "number",
          "format": "float"
        },
        "money": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "googlerpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "type_url": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "v1AccountDelete": {
      "type": "object",
      "properties": {
        "total": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "v1AccountModifyRequest": {
      "type": "object",
      "properties": {
        "account": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        }
      }
    },
    "v1AccountReply": {
      "type": "object",
      "properties": {
        "account": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        },
        "orders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1OrderReply"
          }
        },
        "positions": {
          "$ref": "#/definitions/AccountReplyPositions"
        }
      }
    },
    "v1OrderAction": {
      "type": "string",
      "enum": [
        "BUY",
        "SELL",
        "HOLD"
      ],
      "default": "BUY"
    },
    "v1OrderDuration": {
      "type": "string",
      "enum": [
        "DAY",
        "GTC"
      ],
      "default": "DAY"
    },
    "v1OrderReply": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "exchange": {
          "type": "string"
        },
        "action": {
          "$ref": "#/definitions/v1OrderAction"
        },
        "orderType": {
          "$ref": "#/definitions/v1OrderType"
        },
        "routing": {
          "type": "string"
        },
        "duration": {
          "$ref": "#/definitions/v1OrderDuration"
        },
        "size": {
          "$ref": "#/definitions/OrderReplySize"
        },
        "price": {
          "$ref": "#/definitions/v1OrderReplyPrice"
        },
        "status": {
          "$ref": "#/definitions/v1OrderStatus"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1OrderReplyPrice": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "number",
          "format": "float"
        },
        "buy": {
          "type": "number",
          "format": "float"
        },
        "commission": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "v1OrderStatus": {
      "type": "string",
      "enum": [
        "SUBMITTED",
        "PRESUBMITED",
        "CLOSE",
        "OPEN"
      ],
      "default": "SUBMITTED"
    },
    "v1OrderType": {
      "type": "string",
      "enum": [
        "LMT",
        "MKT",
        "STP",
        "IBALGO",
        "MIDPRICE"
      ],
      "default": "LMT"
    },
    "v1PositionReply": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "exchange": {
          "type": "string"
        },
        "size": {
          "type": "number",
          "format": "float"
        },
        "cost": {
          "$ref": "#/definitions/PositionReplyCost"
        },
        "performance": {
          "$ref": "#/definitions/PositionReplyPerformance"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "securityDefinitions": {
    "bearer": {
      "type": "apiKey",
      "description": "Authentication token, prefixed by Bearer: Bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "bearer": []
    }
  ]
}
