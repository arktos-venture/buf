  "paths": {
    "/v1/orders/{account}/{portfolioUUID}": {
      "post": {
        "summary": "Public API: Create Order",
        "operationId": "Orders_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1OrderModifyReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "portfolioUUID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "ticker": {
                  "type": "string"
                },
                "exchange": {
                  "type": "string"
                },
                "action": {
                  "$ref": "#/definitions/v1OrderAction"
                },
                "orderType": {
                  "$ref": "#/definitions/v1OrderType"
                },
                "size": {
                  "type": "number",
                  "format": "float"
                },
                "duration": {
                  "$ref": "#/definitions/v1OrderDuration"
                },
                "price": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          }
        ],
        "tags": [
          "Orders"
        ]
      }
    },
