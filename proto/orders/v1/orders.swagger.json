{
  "swagger": "2.0",
  "info": {
    "title": "Orders APIs",
    "description": "Orders APIs accounts",
    "version": "1.0",
    "contact": {
      "name": "Arktos Venture project",
      "url": "https://github.com/arktos-venture/buf",
      "email": "oss@arktos-consulting.cloud"
    }
  },
  "tags": [
    {
      "name": "Orders"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/order/{account}": {
      "post": {
        "summary": "Public API\nCreate Orders",
        "operationId": "Orders_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1OrderReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "ticker": {
                  "type": "string"
                },
                "exchange": {
                  "type": "string"
                },
                "action": {
                  "$ref": "#/definitions/v1Action"
                },
                "orderType": {
                  "$ref": "#/definitions/v1OrderType"
                },
                "size": {
                  "type": "number",
                  "format": "float"
                },
                "duration": {
                  "$ref": "#/definitions/ordersv1Duration"
                },
                "price": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          }
        ],
        "tags": [
          "Orders"
        ]
      },
      "put": {
        "summary": "Public API\nUpdate existing Orders",
        "operationId": "Orders_Update",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1OrderReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "ticker": {
                  "type": "string"
                },
                "exchange": {
                  "type": "string"
                },
                "action": {
                  "$ref": "#/definitions/v1Action"
                },
                "orderType": {
                  "$ref": "#/definitions/v1OrderType"
                },
                "size": {
                  "type": "number",
                  "format": "float"
                },
                "duration": {
                  "$ref": "#/definitions/ordersv1Duration"
                },
                "price": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          }
        ],
        "tags": [
          "Orders"
        ]
      }
    },
    "/v1/orders/{account}": {
      "delete": {
        "summary": "Private API\nDelete/cancel existing Orders",
        "operationId": "Orders_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1OrderDelete"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "tickers",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          },
          {
            "name": "exchanges",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          }
        ],
        "tags": [
          "Orders"
        ]
      }
    },
    "/v1/orders/{account}/search": {
      "post": {
        "summary": "Public API\nSearch Orders open or executed",
        "operationId": "Orders_Search",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1OrderReplies"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "filters": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/ordersv1Filter"
                  }
                },
                "sort": {
                  "$ref": "#/definitions/v1OrderSearchRequestSort"
                },
                "limit": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          }
        ],
        "tags": [
          "Orders"
        ]
      }
    }
  },
  "definitions": {
    "OrderReplySize": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "number",
          "format": "float"
        },
        "buy": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "SortOrientation": {
      "type": "string",
      "enum": [
        "ASC",
        "DESC"
      ],
      "default": "ASC"
    },
    "googlerpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "ordersv1Argument": {
      "type": "string",
      "enum": [
        "Ticker",
        "Exchange",
        "Currency",
        "Price",
        "Size",
        "Isin",
        "Id",
        "oAction",
        "oDuration",
        "oType",
        "oStatus",
        "Time"
      ],
      "default": "Ticker"
    },
    "ordersv1Duration": {
      "type": "string",
      "enum": [
        "DAY",
        "GTC"
      ],
      "default": "DAY"
    },
    "ordersv1Filter": {
      "type": "object",
      "properties": {
        "operator": {
          "$ref": "#/definitions/screenerv1Operator"
        },
        "argument": {
          "$ref": "#/definitions/ordersv1Argument"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ordersv1Status": {
      "type": "string",
      "enum": [
        "SUBMITTED",
        "PRESUBMITED",
        "CLOSE",
        "OPEN"
      ],
      "default": "SUBMITTED"
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "type_url": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "screenerv1Operator": {
      "type": "string",
      "enum": [
        "Equal",
        "NotEqual",
        "Greater",
        "GreaterEqual",
        "Less",
        "LessEqual",
        "In",
        "NotIn",
        "Between"
      ],
      "default": "Equal"
    },
    "v1Action": {
      "type": "string",
      "enum": [
        "BUY",
        "SELL",
        "HOLD"
      ],
      "default": "BUY"
    },
    "v1OrderDelete": {
      "type": "object",
      "properties": {
        "total": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "v1OrderReplies": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1OrderReply"
          }
        },
        "total": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "v1OrderReply": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "exchange": {
          "type": "string"
        },
        "action": {
          "$ref": "#/definitions/v1Action"
        },
        "orderType": {
          "$ref": "#/definitions/v1OrderType"
        },
        "routing": {
          "type": "string"
        },
        "duration": {
          "$ref": "#/definitions/ordersv1Duration"
        },
        "size": {
          "$ref": "#/definitions/OrderReplySize"
        },
        "price": {
          "$ref": "#/definitions/v1OrderReplyPrice"
        },
        "status": {
          "$ref": "#/definitions/ordersv1Status"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1OrderReplyPrice": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "number",
          "format": "float"
        },
        "buy": {
          "type": "number",
          "format": "float"
        },
        "commission": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "v1OrderSearchRequestSort": {
      "type": "object",
      "properties": {
        "argument": {
          "$ref": "#/definitions/ordersv1Argument"
        },
        "orientation": {
          "$ref": "#/definitions/SortOrientation"
        }
      }
    },
    "v1OrderType": {
      "type": "string",
      "enum": [
        "LMT",
        "MKT",
        "STP",
        "IBALGO",
        "MIDPRICE",
        "OALL"
      ],
      "default": "LMT"
    }
  },
  "securityDefinitions": {
    "bearer": {
      "type": "apiKey",
      "description": "Authentication token, prefixed by Bearer: Bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "bearer": []
    }
  ]
}
