      "email": "oss@arktos-consulting.cloud"
    }
  },
  "tags": [
    {
      "name": "Portfolios"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/portfolios/{account}": {
      "get": {
        "summary": "Public API: Search portfolios by Account",
        "operationId": "Portfolios_Search",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PortfolioReplies"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "currencies",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          }
        ],
        "tags": [
          "Portfolios"
        ]
      },
      "post": {
        "summary": "Public API: Create Portfolio",
        "operationId": "Portfolios_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PortfolioReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "currency": {
                  "type": "string"
                },
                "allowed_assets": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/v1Asset"
                  }
                }
              }
            }
          }
        ],
        "tags": [
          "Portfolios"
        ]
      }
    },
    "/v1/portfolios/{account}/{currency}": {
      "get": {
        "summary": "Public API: Status Portfolio",
        "operationId": "Portfolios_Status",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PortfolioReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "currency",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Portfolios"
        ]
      },
      "delete": {
        "summary": "Private API: Cancel existing Portfolios",
        "operationId": "Portfolios_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PortfolioDelete"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "currency",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Portfolios"
        ]
      },
      "put": {
        "summary": "Public API: Update existing Portfolios",
        "operationId": "Portfolios_Update",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1PortfolioReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "currency",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "allowed_assets": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/v1Asset"
                  }
                }
              }
            }
          }
        ],
        "tags": [
          "Portfolios"
        ]
      }
    }
  },
  "definitions": {
    "OrderReplySize": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "number",
          "format": "float"
        },
        "buy": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "ResultCost": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "number",
          "format": "float"
        },
        "total": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "ResultPerformance": {
      "type": "object",
      "properties": {
        "percent": {
          "type": "number",
          "format": "float"
        },
        "money": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "googlerpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "type_url": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "v1Asset": {
      "type": "string",
      "enum": [
        "INDEX",
        "BOND",
        "INDICATOR",
        "COMMODITY",
        "STOCK",
        "OPTION",
        "CASH",
        "ETF"
      ],
      "default": "INDEX"
    },
    "v1ExchangeRepliesResult": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "routing": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "open": {
          "type": "boolean"
        }
      }
    },
    "v1OrderAction": {
      "type": "string",
      "enum": [
        "BUY",
        "SELL",
        "HOLD"
      ],
      "default": "BUY"
    },
    "v1OrderDuration": {
      "type": "string",
      "enum": [
        "DAY",
        "GTC"
      ],
      "default": "DAY"
    },
    "v1OrderReply": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "ticker": {
          "type": "string"
        },
        "exchange": {
          "type": "string"
        },
        "action": {
          "$ref": "#/definitions/v1OrderAction"
        },
        "orderType": {
          "$ref": "#/definitions/v1OrderType"
        },
        "routing": {
          "type": "string"
        },
        "duration": {
          "$ref": "#/definitions/v1OrderDuration"
        },
        "size": {
          "$ref": "#/definitions/OrderReplySize"
        },
        "price": {
          "$ref": "#/definitions/v1OrderReplyPrice"
        },
        "status": {
          "$ref": "#/definitions/v1OrderStatus"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1OrderReplyPrice": {
      "type": "object",
      "properties": {
        "ask": {
          "type": "number",
          "format": "float"
        },
        "buy": {
          "type": "number",
          "format": "float"
        },
        "commission": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "v1OrderStatus": {
      "type": "string",
      "enum": [
        "SUBMITTED",
        "PRESUBMITED",
        "CLOSE",
        "OPEN"
      ],
      "default": "SUBMITTED"
    },
    "v1OrderType": {
      "type": "string",
      "enum": [
        "LMT",
        "MKT",
        "STP",
        "IBALGO",
        "MIDPRICE"
      ],
      "default": "LMT"
    },
    "v1PortfolioDelete": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        }
      }
    },
    "v1PortfolioReplies": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1PortfolioRepliesResult"
          }
        },
        "total": {
          "type": "string",
          "format": "int64"
        }
      }
    },
    "v1PortfolioRepliesResult": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "allowed_assets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1Asset"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1PortfolioReply": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "allowed_assets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1Asset"
          }
        },
        "exchanges": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1ExchangeRepliesResult"
          }
        },
        "positions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1PositionRepliesResult"
          }
        },
        "orders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1OrderReply"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1PositionRepliesResult": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "exchange": {
          "type": "string"
        },
        "size": {
          "type": "number",
          "format": "float"
        },
        "cost": {
          "$ref": "#/definitions/ResultCost"
        },
        "performance": {
          "$ref": "#/definitions/ResultPerformance"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "securityDefinitions": {
    "bearer": {
      "type": "apiKey",
      "description": "Authentication token, prefixed by Bearer: Bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "bearer": []
    }
  ]
}
