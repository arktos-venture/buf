        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1IndiceRepliesResult": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "description": {
