    }
  },
  "tags": [
    {
      "name": "Exchanges"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/exchange/{ticker}": {
      "get": {
        "summary": "Public API\nGet Exchange properties",
        "operationId": "Exchanges_Get",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ExchangeReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "ticker",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "request.companies",
            "in": "query",
            "required": false,
            "type": "boolean"
          },
          {
            "name": "request.holidays",
            "in": "query",
            "required": false,
            "type": "boolean"
          }
        ],
        "tags": [
          "Exchanges"
        ]
      }
    },
    "/v1/exchange/{ticker}/isopen": {
      "get": {
        "summary": "Public API\nGet Exchange if is Open",
        "operationId": "Exchanges_IsOpen",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ExchangeIsOpenReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "ticker",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Exchanges"
        ]
      }
    },
    "/v1/exchanges": {
      "get": {
        "summary": "Public API\nSearch Exchanges available",
        "operationId": "Exchanges_Search",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ExchangeReplies"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "country",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "Exchanges"
        ]
      },
      "delete": {
        "summary": "Private API\nDelete Exchange",
        "operationId": "Exchanges_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ExchangeDelete"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/googlerpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "tickers",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          }
        ],
        "tags": [
          "Exchanges"
        ]
      }
    }
  },
  "definitions": {
    "ExchangeReplyCompany": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
