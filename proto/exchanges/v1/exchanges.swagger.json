        },
        "name": {
          "type": "string"
        }
      }
    },
    "v1ExchangeReply": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "indices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/v1IndiceRepliesResult"
          }
        },
        "routing": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
